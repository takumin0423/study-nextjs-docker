{
  "name": "study-nextjs-docker",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:studio:local": "drizzle-kit studio --config=./drizzle.config.local.ts",
    "docker:dev": "docker compose -f compose.yaml -f compose.dev.yaml up --build",
    "docker:dev:down": "docker compose -f compose.yaml -f compose.dev.yaml down",
    "docker:dev:rebuild": "docker compose -f compose.yaml -f compose.dev.yaml down -v && docker compose -f compose.yaml -f compose.dev.yaml build --no-cache && docker compose -f compose.yaml -f compose.dev.yaml up",
    "docker:dev:migrate": "docker compose -f compose.yaml -f compose.dev.yaml exec web pnpm db:migrate",
    "docker:prod": "docker compose up --build",
    "docker:prod:down": "docker compose down",
    "docker:prod:rebuild": "docker compose down -v && docker compose build --no-cache && docker compose up"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.43.1",
    "lucide-react": "^0.511.0",
    "next": "15.3.2",
    "next-themes": "^0.4.6",
    "pg": "^8.16.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.3.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^22.15.21",
    "@types/pg": "^8.15.2",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.0",
    "typescript": "^5"
  },
  "packageManager": "pnpm@10.11.0"
}

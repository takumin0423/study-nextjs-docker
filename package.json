{
  "name": "study-nextjs-docker",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:studio:local": "drizzle-kit studio --config=./drizzle.config.local.ts",
    "docker:dev": "docker compose -f compose.yaml -f compose.dev.yaml up --build",
    "docker:dev:down": "docker compose -f compose.yaml -f compose.dev.yaml down",
    "docker:dev:watch": "docker compose -f compose.yaml -f compose.dev.yaml up --build --watch",
    "docker:prod": "docker compose up --build",
    "docker:prod:down": "docker compose down"
  },
  "dependencies": {
    "drizzle-orm": "^0.43.1",
    "next": "15.3.2",
    "pg": "^8.16.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^22.15.21",
    "@types/pg": "^8.15.2",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "packageManager": "pnpm@10.11.0"
}
